
<div class="panel panel-default">
  <div class="panel-heading <%= 'center' if !@pin.is_auction %>">
    <% if @pin.is_auction %>
      <div class="col-md-6">
    <% end %>
    <div class="jcarousel-wrapper">
      <div class="jcarousel">
        <ul>
          <li>
            <div class="jcarousel-image-container">
              <%= image_tag @pin.image.url(:medium) %>
            </div>
          </li>
          <% if @pin.image2_file_name %>
            <li>
              <div class="jcarousel-image-container">
                <%= image_tag @pin.image2.url(:medium) %>
              </div>
            </li>
          <% end %>
          <% if @pin.image3_file_name %>
            <li>
              <div class="jcarousel-image-container">
                <%= image_tag @pin.image3.url(:medium) %>
              </div>
            </li>
          <% end %>
          <% if @pin.image4_file_name %>
            <li>
              <div class="jcarousel-image-container">
                <%= image_tag @pin.image4.url(:medium) %>
              </div>
            </li>
          <% end %>
          <% if @pin.image5_file_name %>
            <li>
              <div class="jcarousel-image-container">
                <%= image_tag @pin.image5.url(:medium) %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>

      <% if !@pin.single_image_only? %>
        <a href="#" class="jcarousel-control-prev">&lsaquo;</a>
        <a href="#" class="jcarousel-control-next">&rsaquo;</a>
      <% end %>
    </div>
    <% if @pin.is_auction %>
      </div>
      <div class="col-md-6">
        <h3>Auction Details</h3>
        <% if @pin.is_auction_started? && ! %>
          <p>This auction is live! It will end at <%= @pin.auction_end_at.strftime("%B %d, %Y, %H:%M") %>.</p>
        <% elsif @pin.is_auction_ended? %>
          <p>This auction ended at <%= @pin.auction_end_at.strftime("%B %d, %Y, %H:%M") %>.</p>
        <% elsif !@pin.is_auction_started? %>
          <p>This auction opens at <%= @pin.auction_start_at.strftime("%B %d, %Y, %H:%M") %>.</p>
        <% end %>
        <% if @pin.minimum_bid && !@pin.is_auction_ended? %>
          <p>Minimum bid: $<%= number_with_precision(@pin.minimum_bid, precision: 2) %></p>
        <% end %>
        <% if @pin.reserve && !@pin.is_auction_ended? %>
          <p>Reserve price: $<%= number_with_precision(@pin.reserve, precision: 2) %></p>
        <% end %>
      </div>
      <div class="clear"></div>
    <% end %>
  </div>
  <div class="panel-body">
    <p>
      <strong>Manufacturer:</strong>
      <%= @pin.manufacturer %>
    </p>
    <p>
      <strong>Model:</strong>
      <%= @pin.model %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @pin.description %>
    </p>
  </div>
</div>
<center><%= link_to 'Contact Us', {:controller => "contact", :action => "show", :pin_id => @pin.id}, {class: "btn btn-default btn-lg"} %></center>

<br><br/>

<% if @pin.user == current_user %>
  <%= link_to 'Edit', edit_pin_path(@pin) %> |
<% end %>
<%= link_to 'Back', pins_path %>
